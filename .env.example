# Flask Configuration
# Set to 'development', 'testing', or 'production'
FLASK_ENV=development

# Flask Debug Mode
# Set to 1 to enable debug mode (auto-reload, interactive debugger)
FLASK_DEBUG=1

# Secret Key for session management and security
# Generate a random secret for production: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# Database URL (optional for SQLite)
# For SQLite (default): sqlite:///tasks.db
# For PostgreSQL: postgresql://user:password@localhost:5432/taskdb
# For MySQL: mysql+pymysql://user:password@localhost:3306/taskdb
DATABASE_URL=sqlite:///tasks.db

# Logging Configuration
# Set log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log File Path
# Logs will be written to this file (relative to project root)
LOG_FILE=logs/app.log
